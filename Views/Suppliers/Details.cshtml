@model ClinicaCaniZzoo.Models.Suppliers

@{
    ViewBag.Title = "Dettagli fornitori";
}

<h2 class="fw-bold fs-1 my-3">Dettagli fornitori</h2>

<div class="card">
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="fw-bold fs-2">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Indirizzo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Indirizzo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Telefono)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Modifica", "Edit", new { id = Model.IdFornitore }, new { @class = "btn btn-primary" })
        <a href="@Url.Action("Index")" class="btn btn-secondary mr-2">Torna alla lista fornitori</a>
    </div>
</div>
